<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fragment_recite__main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.words.fragments.FragmentRecite_Main">

    <TextView

    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="英文写译"
    android:textSize="20dp"
    android:gravity="center"
    android:background="@drawable/icon_my_self"
        android:id="@+id/recite_1"
    />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/recite_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="翻译写英"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/icon_my_self"
        android:id="@+id/recite_2"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/recite_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="英文选译"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/icon_my_self"
        android:id="@+id/recite_3"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/recite_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="翻译选英"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/icon_my_self"
        android:id="@+id/recite_4"
        />
